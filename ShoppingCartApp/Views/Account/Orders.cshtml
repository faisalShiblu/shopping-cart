@model IEnumerable<ShoppingCartApp.Models.ViewModels.Account.OrdersForUserVM>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
    <h3 class="text-center">
        You have no orders
    </h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Order details
            </th>
            <th>
                Created At
            </th>
            <th>
                Total
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @foreach (var orderDetails in item.ProductsAndQuantity)
                    {
                        @orderDetails.Key @:x @orderDetails.Value <br />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }

    </table>
}